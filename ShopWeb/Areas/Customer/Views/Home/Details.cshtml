@model ShoppingCart
<form method="post">
    <input hidden asp-formaction="productId" />
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.product.Title</h3>
                    <p class="text-white-50 fw-semibold mb-0">by @Model.product.Maker</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="mx-auto">
                    <div class="col-12 col-md-6 offset-lg-1 pb-1 mx-auto">
                        <img src="@Model.product.ImageUrl" width="50%" class="rounded mx-auto" />
                        <p class="text-secondary lh-sm my-3 mx-auto">@Model.product.Description</p>
                    </div>
                    <div class="row pl-2 my-3">
                        
                    </div>
                </div>
                <div class="row">
                <div class="col-12 col-lg-6 offset-lg-1">
                    <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 ">Made by : @Model.product.Maker</h6>
                    </div>
                    <div class="row ps-2">
                        <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                            <div>Price</div>
                        </div>
                        <h6 class="text-dark text-opacity-50  pb-2">
                                @Model.product.Price.ToString("c")
                            <span class="text-decoration-line-through"></span>
                        </h6>
                    </div>
                    <div class="row text-center ps-2">
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark text-opacity-50 fw-semibold">Quantity</div>
                        </div>
                    </div>
                    
                    <div class="row pl-2 mb-3">
                        <div class="col-md-4">
                            <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold" id="inputGroup-sizing-default" asp-for="Count">Count</span>
                                    <input type="number" asp-for="Count" value="1" class="form-control text-end" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1">
                            <button type="submit" class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">Add to Cart</button>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</form>
