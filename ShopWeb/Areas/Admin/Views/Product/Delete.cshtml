@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3 my-4">
                <div class="row pb-2"></div>
                 <div class="mb-3 row p-1">
                    <label asp-for="Title"  class="p-0"></label>
                    <input asp-for="Title" disabled class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Description"  class="p-0"></label>
                    <input asp-for="Description" disabled class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Maker"  class="p-0"></label>
                    <input asp-for="Maker" disabled class="form-control" />
                    <span asp-validation-for="Maker" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price" class="p-0"></label>
                    <input asp-for="Price" disabled class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to list</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
